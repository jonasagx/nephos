function buscaData(codigo, numAba, texto) {
	$.getJSON('/sigma_home/buscadata/' + codigo, function(j){
		if (numAba != 6) 
			document.getElementById("dataImg" + numAba).innerHTML = texto + $( "#fundoAba"+numAba + " option:selected").text() + ": " + j;
		else
			document.getElementById("dataImg" + numAba).innerHTML = texto + j;
	});
}

