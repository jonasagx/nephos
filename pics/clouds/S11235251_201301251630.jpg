/* script para abrir pop-up */
function go(pagina) {
	x=window.screen.width;
	y=window.screen.height; 
	janela = window.open(pagina,'Popup','toolbar=no,location=no,directories=no,status=no,menubar=no,scrollbars=yes,resizable=yes,menubar=no,top=0, left=0, width='+x+',height='+y);
	janela.moveTo(0,0);
}

function mudaExtent(numAba, extent) {
	document.getElementById("extentAba" + numAba).value=extent;
	var fundo = $( "#fundoAba"+numAba ).val();
	imagem = "http://sigma.cptec.inpe.br/cgi-bin/mapserv?map=/extra2/sigma/www/webservice/webservice_dsa.map&mode=map&mapsize=699+664&layers=" + fundo + "%20estados%20paises%20copyright2&mapext=" + extent;
	document.getElementById("mapa" + numAba).src=imagem;
}

